{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "sequential-write",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                // "/tmp", "--mb", "32", "--time", "60"
                "L:/tmp",
                "--mb",
                "32",
                "--time",
                "60"
            ]
        },
        {
            "name": "write",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "write",
                "--size",
                "4194303",  // 4MB - 1
                "--log-level", "DEBUG"
            ]
        },
        {
            "name": "app - write",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "args": [
                "write",
                "--size", "1024",
                "--value", "69",
                "--data-filepath", "Y:/tmp",
                "--iterations", "10",
                // who cares
                "--log-level", "DEBUG",
                "--no-crystaldiskinfo",
            ]
        },
        {
            "name": "app - flow",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "args": [
                "flow", "--steps", "write", "read",
                "--flow-iterations", "2",
                // all other steps
                "--size", "1024",
                "--value", "69",
                "--data-filepath", "Y:/tmp",
                "--iterations", "10",
                "--burn-in",
                // who cares
                "--log-level", "DEBUG",
                "--no-crystaldiskinfo",
            ]
        },
        {
            "name": "app - telemetry",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "args": [
                "telemetry", "--poll", "5",
                // who cares
                "--log-level", "DEBUG",
                "--no-crystaldiskinfo",
            ]
        },
    ]
}