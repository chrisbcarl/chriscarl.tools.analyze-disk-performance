{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "sequential-write",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                // "/tmp", "--mb", "32", "--time", "60"
                "L:/tmp",
                "--mb",
                "32",
                "--time",
                "60"
            ]
        },
        {
            "name": "app - write",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "write",
                "--size", "1024",
                "--value", "69",
                "--data-filepath", "Y:/tmp",
                "--iterations", "10",
                // who cares
                "--log-level", "DEBUG",
                "--no-crystaldiskinfo",
            ]
        },
        {
            "name": "app - flow: fulpak 1kb, 2x",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "write", "--size", "1mb", "--value", "69", "--data-filepath", "I:/tmp", "--iterations", "2",
                // common
                "--no-admin"
                // "--log-level", "DEBUG",
            ]
        },
        ///
        {
            "name": "app - flow",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "flow", "--steps", "write", "read",
                "--flow-iterations", "2",
                // all other steps
                "--size", "1024",
                "--value", "69",
                "--data-filepath", "Y:/tmp",
                "--iterations", "10",
                "--burn-in",
                // who cares
                "--log-level", "DEBUG",
                "--no-crystaldiskinfo",
            ]
        },
        {
            "name": "app - flow 2",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "flow", "--steps", "write", "read", "telemetry",
                "--iterations", "10", "--burn-in", "--size", "1kb",
                "--flow-iterations", "5",
                "--log-level", "DEBUG", "--no-crystaldiskinfo"
            ]
        },
        {
            "name": "app - read",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "read",
                "--data-filepath", "C:/temp/tmp",
                "--random-read", "1mb",
                "--skip-telemetry",
                "--log-unit", "KB", "--log-mod", "32", "--log-level", "INFO"
            ]
        },
        {
            "name": "app - telemetry",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "telemetry", "--poll", "5",
                // who cares
                "--log-level", "DEBUG",
                "--no-crystaldiskinfo",
            ]
        },
    ]
}