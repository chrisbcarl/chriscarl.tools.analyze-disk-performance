{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "app -h",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": ["flow", "-h"]
        },
        {
            "name": "app - create",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "create",
                "--size", "128mb",
                "--data-filepath", "Y:/tmp",
                // who cares
                "--log-level", "DEBUG",
                "--no-admin",
            ]
        },
        {
            "name": "app - write",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "write",
                "--size", "1024",
                "--value", "69",
                "--data-filepath", "Y:/tmp",
                "--iterations", "10",
                // who cares
                "--log-level", "DEBUG",
                "--no-crystaldiskinfo",
            ]
        },
        {
            "name": "app - write_burnin",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "write_burnin", "--size", "4GB", "--log-every", "16MB", "--chunk-size", "64MB", "--data-filepath", "I:/tmp",
                // common
                "--log-level", "DEBUG", "--no-telemetry"
            ]
        },
        {
            "name": "app - read_rand",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "read_rand",
                "--size", "64mb",
                "--log-every", "1mb",
                "--chunk_size", "16",
                // common
                "--no-telemetry", "--log-level", "DEBUG",
            ]
        },
        {
            "name": "app - flow",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "flow", "--steps", "create", "write_burnin", "read_seq",
                "--flow-iterations", "2",
                // all other steps
                "--size", "4GB", "--value", "69", "--data-filepath", "I:/tmp", "--log-every", "16MB",
                // who cares
                "--log-level", "DEBUG", "--no-telemetry",
            ]
        },
        {
            "name": "app - read",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "read",
                "--data-filepath", "C:/temp/tmp",
                "--random-read", "1mb",
                "--skip-telemetry",
                "--log-unit", "KB", "--log-mod", "32", "--log-level", "INFO"
            ]
        },
        {
            "name": "app - telemetry",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "telemetry", "--poll", "5",
                // who cares
                "--log-level", "DEBUG",
                "--no-crystaldiskinfo",
            ]
        },
    ]
}